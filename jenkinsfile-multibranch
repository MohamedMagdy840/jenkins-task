pipeline {
    agent any

    stages {
        stage('Hello') {
            steps {
                echo 'Hello Jenkins'
            }
        }

        stage('Build') {
            steps {
                // Your build steps here
                sh 'echo "Building..."'
                // Example: Execute a failing command to simulate failure
                sh 'exit 1'
            }
        }
        // Add more stages as needed...
    }

    post {
        failure {
            echo "Pipeline failed, triggering AnotherPipeline..."
            build job: '1st-pipeline', wait: false
        }
    }
}
